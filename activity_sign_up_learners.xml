<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgeyes"
    tools:context=".SignUp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageSignUp"
        android:layout_width="160dp"
        android:layout_height="138dp"
        android:background="@android:drawable/alert_dark_frame"
        app:layout_constraintBottom_toTopOf="@+id/enternameSU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.683"
        app:srcCompat="@drawable/loginbuttons" />

    <EditText
        android:id="@+id/enternameSU"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="@font/chewy"
        android:inputType="text"
        android:outlineSpotShadowColor="@color/black"
        android:hint="Learner's name"
        android:textColorHint="@color/black"

        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/reenterSU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageSignUp"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/enteremailSU"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_marginBottom="320dp"
        android:ems="10"
        android:fontFamily="@font/chewy"
        android:inputType="text"
        android:textColorHint="@color/black"

        android:outlineSpotShadowColor="@color/black"
        android:hint="Enter Email"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reenterSU" />

    <EditText
        android:id="@+id/enterpassSU"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_marginBottom="256dp"
        android:ems="10"
        android:fontFamily="@font/chewy"
        android:inputType="text"
        android:outlineSpotShadowColor="@color/black"
        android:hint="Enter Password"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enteremailSU" />

    <EditText
        android:id="@+id/reenterSU"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:ems="10"
        android:fontFamily="@font/chewy"
        android:inputType="text"
        android:textColorHint="@color/black"

        android:outlineSpotShadowColor="@color/black"
        android:hint="Enter Password Again"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.382" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SingUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"


        android:background="@drawable/loginbuttons"
        android:fontFamily="@font/chewy"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterpassSU"
        app:layout_constraintVertical_bias="0.695" />

    <FrameLayout
        android:id="@+id/profilelayoutSU"
        android:layout_width="176dp"
        android:layout_height="159dp"
        app:layout_constraintBottom_toTopOf="@+id/enternameSU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/SingUpButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/SingUpButton" />


</androidx.constraintlayout.widget.ConstraintLayout>